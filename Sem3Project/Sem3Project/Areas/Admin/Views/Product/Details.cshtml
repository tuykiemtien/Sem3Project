@model Sem3Project.Entites.ProductDTO
@{
    ViewBag.Title = "Details";
}
<section class="modal-header">
    <h2 class="text-center">@Model.ProductName </h2>
</section>



<div class="modal-body row">
    <h4 class="col col col-md-offset-4">Supplier     : @Model.SupplierID</h4>
    <h4 class="col col col-md-offset-4">Category          : @Model.CategoryID</h4>
    <h4 class="col col col-md-offset-4">QuantityPerUnit               : @Model.QuantityPerUnit</h4>
    <h4 class="col col col-md-offset-4">UnitPrice   : @Model.UnitPrice</h4>
    <h4 class="col col col-md-offset-4">UnitsInStock          : @Model.UnitsInStock</h4>
    <h4 class="col col col-md-offset-4">UnitsOnOrder          : @Model.ReorderLevel</h4>
    <h4 class="col col col-md-offset-4">Discontinued             : @Model.Discontinued</h4>
    <h4 class="col col col-md-offset-4">ProductImage                : @Model.ProductImage</h4>

</div>
<section class="modal-footer">
    <p>
        <a class="btn btn-lg btn-primary" onclick="showEdit('@Model.ProductID')" href="#" title="Edit this products"><span class="glyphicon glyphicon-edit"><i></i></span></a>
        &nbsp;&nbsp;<button class="btn btn-lg btn-danger" id="delete-button" data-dismiss="modal"  value="@Model.ProductID" title="Delete this employee"><span class="glyphicon glyphicon-trash"></span></button>&nbsp;
        <a class="btn btn-lg btn-success" href="#" data-dismiss="modal" title="Back to list"><span class="glyphicon glyphicon-list"><i></i></span></a>
    </p>
</section>

<script src="~/Scripts/admin/product/details.js"></script>
<script type="text/javascript">
    function showEdit(e) {

        var url = "/Admin/Product/Edit?id=" + e;

        $('#dashboardModalContent').load(url, function () {
            $('#dashboardModalWrapper').modal({
                backdrop: 'static',
                keyboard: false
            }, 'show');
        });

    }
    function showDetail(e) {

        var url = "/Admin/Product/Details?id=" + e;

        $('#dashboardModalContent').load(url, function () {
            $('#dashboardModalWrapper').modal({
                backdrop: 'static',
                keyboard: false
            }, 'show');
        });

    }
</script>
