@using Sem3Project.Entites
@{
    ViewBag.Title = "Edit";
    var list = ViewBag.listAdmin;
}
<section class="modal-header">
    <h2>Edit Employee</h2>
</section>

<section class="modal-body row">
    <section>
        <div><p class="text-danger" id="update-valid"></p></div>
        <form class="form-horizontal" id="form" method="post" enctype="multipart/form-data">
            <section class="col-md-6">
                <div class="form-group">
                    <label for="name" class="control-label col-sm-2">Company Name</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <input type="text" class="form-control" id="company-name" placeholder="Enter first name" style="width:280px;" />
                            <span class="text-danger" id="company-name-valid"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="control-label col-sm-2">Phone</label>
                    <div class="col-sm-10">
                        <div class="input-group">
                            <input type="text" class="form-control" id="phone" placeholder="Enter last name" style="width:280px;" />
                            <span class="text-danger" id="phone-valid"></span>
                        </div>
                    </div>
                </div>
             </section>
        </form>
    </section>
</section>
<section class="modal-footer">
    <div class="form-group ">
        <div class="col col-md-offset-2">
            <button type="button" id="edit" class="btn btn-primary  " value="@ViewBag.ID">Edit</button>
            <button type="button" id="cancel" class="btn btn-secondary" data-dismiss="modal" value="@ViewBag.ID">Cancel</button>
        </div>
    </div>
</section>
<script src="~/Scripts/admin/Shipper/Edit.js"></script>
<script type="text/javascript">
 $(document).ready(function () {
        var getID = @ViewBag.ID;
        $.ajax({
            type: 'GET',
            url: '/Admin/Shipper/GetShipperByID?id=' + getID,
            cache: false,
            dataType: 'json',
            contentType: 'application/json;charset= utf-8',
            success: function (data) {


                $(function () {
                    $("#company-name").val(data.CompanyName);
                    $("#phone").val(data.Phone);
                });
            }
        });

    });

</script>