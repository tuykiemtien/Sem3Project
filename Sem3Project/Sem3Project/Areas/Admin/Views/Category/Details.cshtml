@model Sem3Project.Entites.CategoryDTO
@{
    ViewBag.Title = "Details";
    Layout = null;
}
<section class="modal-header">
    <h2 class="text-center">@Model.CategoryName</h2>
</section>



<div class="modal-body row">
    <img title="@Model.CategoryImage" src="@Url.Content(String.Format("~/Upload/Employee/" + Model.CategoryImage))" class="col col-md-offset-4" style="height: 300px;width: 300px;" />
    <h4 class="col col col-md-offset-4"> Name          : @Model.CategoryName</h4>
    <h4 class="col col col-md-offset-4">Description         : @Model.Description</h4>
</div>
<section class="modal-footer">
    <p>
        <a class="btn btn-lg btn-primary" onclick="showEdit('@Model.CategoryID')" href="#" title="Edit this employee"><span class="glyphicon glyphicon-edit"><i></i></span></a>
        &nbsp;&nbsp;<button class="btn btn-lg btn-danger" id="delete-button" data-dismiss="modal" value="@Model.CategoryID" title="Delete this employee"><span class="glyphicon glyphicon-trash"></span></button>&nbsp;
        <a class="btn btn-lg btn-success" href="#" data-dismiss="modal" title="Back to list"><span class="glyphicon glyphicon-list"><i></i></span></a>
    </p>
</section>

<script type="text/javascript">
    function showEdit(e) {

        var url = "/Admin/Category/Edit?id=" + e;

        $('#dashboardModalContent').load(url, function () {
            $('#dashboardModalWrapper').modal({
                backdrop: 'static',
                keyboard: false
            }, 'show');
        });

    }
    function showDetail(e) {

        var url = "/Admin/Category/Details?id=" + e;

        $('#dashboardModalContent').load(url, function () {
            $('#dashboardModalWrapper').modal({
                backdrop: 'static',
                keyboard: false
            }, 'show');
        });

    }
</script>
